@{

    ViewData["Title"] = "ResetPassword";
}
<div class="container col-6">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Reset Password</h1>
        </div>
        @using (Html.BeginForm("ResetPassword", "ResetPassword", FormMethod.Post))
        {
            <div class="card-body">
                <h1 class="text-danger">@ViewBag.message</h1>
                <h1 class="text-success">@ViewBag.MessageGood</h1>
                <div id="reset-password" class="">
                    <div class="form-group">
                        <input type="text" class="form-control" required name="username" placeholder="Username" maxlength="25">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" required name="email" placeholder="Email" maxlength="40">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" onclick="">Get New Password</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>