@{
    ViewData["Title"] = "Index";
}

@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    <div class="container col-6">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Sign Up Form</h1>
            </div>

            <div class="card-body">
                <h1 class="text-success">@ViewBag.MessageGood</h1>
                <h1 class="text-danger">@ViewBag.message</h1>
                <h1 class="text-success">@ViewBag.MessageGood</h1>
                <div class="form-group text-left ">
                    <input class="form-control" id="UsernameField" type="text" name="username" placeholder="Username" required maxlength="25">
                </div>
                <div class="form-group text-left ">
                    <input class="form-control" id="EmailField" type="email" name="email" placeholder="Email" required maxlength="40">
                </div>
                <div class="form-group text-left ">
                    <input class="form-control" id="PasswordField" type="password" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" required maxlength="30">
                </div>
                <div class="form-group text-left ">
                    <input class="form-control" id="ConfirmPasswordField" type="password" name="confirmPassword" placeholder="Confirm Password" required maxlength="30">
                </div>
                <div class="form-group text-left ">
                    <div class="clear"> </div>
                </div>
                <div class="form-group text-left ">
                    <div class="form-group text-center ">
                        <button type="submit" class="btn btn-primary btn-block" id="smButton" onclick="return Validate()">Sign Up</button>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div id="message">
                    <h5 class="p-0,5">Password must contain the following:</h5>
                    <ul>
                        <li>A <b>lowercase</b> letter</li>
                        <li>A <b>capital (uppercase)</b> letter</li>
                        <li>A <b>number</b></li>
                        <li>Minimum <b>6 characters</b></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/js/site.js"></script>
}